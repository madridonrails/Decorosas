<%= object_messages %>
<div id="content" class="simpleform">
  <fieldset>
    <legend><%= t('client.index.legend')%></legend>
  </fieldset>
  <div id="table-area">

    <p class="add-link">
      <%= link_to t('general.new'), new_client_path %> <%=image_tag 'icon-add.gif', :align => "absmiddle"%>
    </p>
    <br/>

    <% unless @clients.empty? %>
      <table class="tabla">
        <%= render :partial => 'header' %>
        <%= render :partial => 'client', :collection => @clients %>
      </table>
    <% end %>
  </div>
<%= will_paginate @clients, :prev_label => t('pagination.prev'), :next_label => t('pagination.next'), :params => params.clone.delete_if{|k,v| k == 'controller' || k == 'action' || k == 'page'}, :class => 'page-navigation' %>
</div>
