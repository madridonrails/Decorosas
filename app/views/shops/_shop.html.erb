<%unless shop.blank?%>
  <% td_class = cycle('', ' class="impar"') %>
  <tr>
    <td<%= td_class %>><%= h shop.name %> </td>
    <td<%= td_class %>><%= h shop.address %> </td>
    <td<%= td_class %>><%= shop.central? ? t('general.yes') : t('general.no') %> </td>
    <td<%= td_class %>>
       <%= link_to image_tag('icon-view.gif', :alt => t('general.show'), :title => t('general.show' )), shop_url(shop) %>
       <%= link_to image_tag('icon-edit.gif', :alt => t('general.edit'), :title => t('general.edit') ), edit_shop_url(shop) %>
       <%= link_to image_tag('icon-delete.gif', :alt => t('general.delete'), :title => t('general.delete') ), shop_url(shop), :method => 'delete', :confirm => t('general.are_you_sure') %>
    </td>
  </tr>
<% end %>
